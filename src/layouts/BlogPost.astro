---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

export interface Props {
  content: {
    title: string;
    description: string;
    pubDate?: string;
    updatedDate?: string;
    heroImage?: string;
  };
}

const {
  content: { title, description, pubDate, updatedDate },
} = Astro.props;
---

<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
  </head>

  <body>
    <Header />

    <main
      class="min-h-screen p-4 sm:mx-auto lg:mx-auto lg:w-8/12 xl:w-1/2 sm:w-10/12 m:p-0 lg:p-10 text-gray-800"
    >
      <p class="mb-8">
        <a href="/blog" class="hover:text-green">&lsaquo; Go back</a>
      </p>
      <p class="text-sm text-gray-700">
        {pubDate && <time>{pubDate}</time>}
        {
          updatedDate && (
            <div>
              Last updated on <time>{updatedDate}</time>
            </div>
          )
        }
      </p>
      <article class="prose lg:prose-lg prose-md">
        <h1 class="title">{title}</h1>
        <slot />
      </article>
    </main>
    <Footer />
  </body>
</html>
