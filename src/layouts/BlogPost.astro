---
import BaseHead from '../components/BaseHead.astro'
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'
import NewsletterSignup from '../components/NewsletterSignup.vue'

export interface Props {
  content: {
    title: string
    description: string
    pubDate?: string
    updatedDate?: string
    heroImage?: string
  }
}

const {
  content: { title, description, pubDate, updatedDate, heroImage },
} = Astro.props

const postText = `I just read "${title}" by @Dominus_Kelvin \n`
const postUrl = `https://x.com/intent/tweet?url=${
  Astro.url
}&text=${encodeURIComponent(postText)}`
const xSearchUrl = `https://x.com/search?q=${encodeURI(
  String(Astro.url)
)}`
---

<html lang="en" class="scroll-smooth">
  <head>
    <BaseHead title={title} description={description} image={heroImage} />
  </head>

  <body class="bg-gray-50">
    <Header />

    <main class="min-h-screen">
      <article class="max-w-3xl mx-auto px-4 sm:px-10 py-12 lg:py-20">
        
        <!-- Back link -->
        <a 
          href="/blog" 
          class="inline-flex items-center text-sm text-gray-600 hover:text-gray-900 transition-colors mb-8 group"
        >
          <svg class="w-4 h-4 mr-2 group-hover:-translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
          Back to blog
        </a>

        <!-- Article header -->
        <header class="mb-12">
          <time class="text-sm text-gray-500 block mb-4">
            {pubDate}
          </time>
          <h1 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-gray-900 mb-4 leading-tight">
            {title}
          </h1>
          {updatedDate && (
            <p class="text-sm text-gray-500">
              Last updated on <time>{updatedDate}</time>
            </p>
          )}
        </header>

        <!-- Hero image -->
        {heroImage && (
          <div class="mb-12">
            <img 
              src={heroImage} 
              alt={title} 
              class="w-full rounded-2xl ring-1 ring-gray-900/5" 
            />
          </div>
        )}

        <!-- Article content -->
        <div class="prose prose-lg prose-gray max-w-none
          prose-headings:font-bold prose-headings:text-gray-900
          prose-h2:text-2xl prose-h2:mt-12 prose-h2:mb-4
          prose-h3:text-xl prose-h3:mt-8 prose-h3:mb-3
          prose-p:text-gray-600 prose-p:leading-relaxed prose-p:mb-6
          prose-a:text-green-600 prose-a:no-underline prose-a:font-medium hover:prose-a:text-green-700
          prose-strong:text-gray-900 prose-strong:font-semibold
          prose-code:text-green-600 prose-code:bg-green-50 prose-code:px-1.5 prose-code:py-0.5 prose-code:rounded prose-code:text-sm prose-code:before:content-none prose-code:after:content-none
          prose-pre:bg-gray-900 prose-pre:text-gray-100 prose-pre:rounded-xl prose-pre:ring-1 prose-pre:ring-gray-900/5
          prose-ul:my-6 prose-ol:my-6
          prose-li:text-gray-600 prose-li:leading-relaxed
          prose-img:rounded-xl prose-img:ring-1 prose-img:ring-gray-900/5
          prose-blockquote:border-l-green-600 prose-blockquote:text-gray-600 prose-blockquote:italic
        ">
          <slot />
        </div>

        <!-- Social sharing -->
        <div class="mt-16 pt-8 border-t border-gray-200/60">
          <div class="flex flex-wrap items-center gap-4">
            <span class="text-sm font-medium text-gray-900">Share this article:</span>
            <div class="flex gap-3">
              <a
                target="_blank"
                rel="noreferrer noopener"
                href={postUrl}
                class="inline-flex items-center px-4 py-2 text-sm font-medium text-gray-700 bg-white rounded-lg ring-1 ring-gray-900/5 hover:bg-gray-50 hover:text-gray-900 transition-colors"
              >
                Post on X
              </a>
              <a
                target="_blank"
                rel="noreferrer noopener"
                href={xSearchUrl}
                class="inline-flex items-center px-4 py-2 text-sm font-medium text-gray-700 bg-white rounded-lg ring-1 ring-gray-900/5 hover:bg-gray-50 hover:text-gray-900 transition-colors"
              >
                Discuss on X
              </a>
            </div>
          </div>
        </div>

      </article>
    </main>

    <Footer />
  </body>
</html>
